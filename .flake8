[flake8]
max-line-length = 100
ignore = 
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
    F401,  # module imported but unused (common in __init__.py files)
    F403,  # 'from module import *' used (needed for RazorEnhanced)
exclude = 
    .git,
    __pycache__,
    dist,
    build,
    .venv,
    venv
per-file-ignores =
    __init__.py:F401,F403
    src/utils/imports.py:F401,F403
    DexBot.py:F401,F403
